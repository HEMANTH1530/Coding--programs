class Solution {
    public int maxSubarrayXOR(int[] arr, int k) {
        int windowXor = 0;
        int maxXor = 0;

        for (int i = 0; i < k; i++) {
            windowXor ^= arr[i];
        }

        maxXor = windowXor;

        for (int j = k; j < arr.length; j++) {
            windowXor ^= arr[j];       
            windowXor ^= arr[j - k];
            maxXor = Math.max(maxXor, windowXor);
        }

        return maxXor;
    }
}
